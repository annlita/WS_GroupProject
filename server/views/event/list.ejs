<% include ../partials/header.ejs %>
<% include ../partials/main_nav.ejs %>
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><% title %> </h1>  
            <a href="/eventslist/add" class="btn btn-primary" 
            role="button"><i class="fas fa-plus-circle"></i> Add Event</a>      
        <br>
        <table class="table table-bordered table-striped table-hover">
            <tr class="d-flex">
                <th class="text-center col-2">Name</th>
                <th class="text-center col-2">Time</th>
                <th class="text-center col-1">Date</th>
                <th class="text-center col-4">Location</th>
                <th class="text-center col-1">Description</th>
            </tr>
            <% for(let count=0;count<EventList.length;count++) { %>    
            <tr class="d-flex">
                <td class="text-center col-2"><%= Eventlist[count].Name %></td>
                <td class="text-center col-2"><%= Eventlist[count].Time %></td>
                <td class="text-center col-1"><%= Eventlist[count].Date %></td>
                <td class="text-center col-4"><%= Eventlist[count].Location %></td>
                <td class="text-center col-1"><%= Eventlist[count].Description %></td>
                <td class="text-center col-1">
                    <a href="/eventslist/edit/<%= Eventlist[count]._id %>" 
                        class="btn btn-primary btn-sm"
                        <i class="fas fa-pencil-alt"></i> Edit
                    </a>
                </td>
                <td class="text-center col-1">
                    <a href="/eventslist/delete/<%= Eventlist[count]._id %>" 
                        class="btn btn-danger btn-sm">
                        <i class="fas trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
            <% } %>
        </table>
    </div>
    </div>
</main>
<% include ../partials/bottom_nav.ejs %>
<% include ../partials/footer.ejs %>