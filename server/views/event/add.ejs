<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Event Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Event's Name"
                    name="Name" required>
                </div>

                <div class="form-group">
                    <label for="timeTextField">Time</label>
                    <input type="text" class="form-control"
                    id="timeTextField"
                    placeholder="Enter the Event's Time"
                    name="Time" required>
                </div>

                <div class="form-group">
                    <label for="dateTextField">Date</label>
                    <input type="text" class="form-control"
                    id="dateTextField"
                    placeholder="Enter the Event's Date"
                    name="Date" required>
                </div>

                <div class="form-group">
                    <label for="locationTextField">Location</label>
                    <input type="text" class="form-control"
                    id="locationTextField"
                    placeholder="Enter the Event's Location"
                    name="Location" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the Description of the Event"
                    name="Description" required></textarea>
                </div>


                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/event-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>