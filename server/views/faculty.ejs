<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Metdata for character set, responsive design -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Faculty Page</title>
  <!-- Link to the external stylesheet -->
  <link rel="stylesheet" href="faculty.css">
</head>
<body>
  <!-- Container for faculty information -->
  <div class="faculty-container">
    <!-- Main heading for the faculty page -->
    <h1>Our Faculty</h1>

    <!-- Section for the Business Faculty -->
    <div class="faculty-section">
      <!-- Subheading of Business Faculty -->
      <h2>Business Faculty</h2>
      <!--  faculty member  image, name -->
      <div class="faculty-member">
        <img src="assets\images\lauren.jpg" alt="Professor Laura Green" width="350">
        <div class="faculty-name">Professor Laura Green</div>
      </div>
      <div class="faculty-member">
        <img src="assets\images\hui.webp" alt="Professor Hui Chang" width="350">
        <div class="faculty-name">Professor Hui Chang</div>
      </div>
    </div>

    <!-- Computer Science Faculty section -->
    <div class="faculty-section">
      <!-- Subheading for Computer Science Faculty -->
      <h2>Computer Science Faculty</h2>
      <!--  faculty member with image, name-->
      <div class="faculty-member">
        <img src="assets\images\ali.jpg" alt="Professor Ahmad Ali" width="350">
        <div class="faculty-name">Professor Ahmad Ali</div>
      </div>
      <div class="faculty-member">
        <img src="assets\images\will.jpg" alt="Professor William Davis" width="350">
        <div class="faculty-name">Professor William Davis</div>
      </div>
    </div>

    
    <div class="faculty-section">
      <!-- Subheading of Law Faculty -->
      <h2>Law Faculty</h2>
      <!-- Individual faculty member with image, name -->
      <div class="faculty-member">
        <img src="assets\images\kat.jpg" alt="Professor Kathleen Johnson" width="350">
        <div class="faculty-name">Professor Kathleen Johnson</div>
      </div>
    </div>

    <!-- Section  Health Science Faculty -->
    <div class="faculty-section">
      <!-- Subheading for the Health Science Faculty -->
      <h2>Health Science Faculty</h2>
      <!--  faculty member with image, name -->
      <div class="faculty-member">
        <img src="assets\images\peter.jpg" alt="Professor Peter" width="350">
        <div class="faculty-name">Professor Peter</div>
      </div>
    </div>

  </div>
</body>
</html>
